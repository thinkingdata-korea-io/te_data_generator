# =====================================
# ThinkingEngine Data Generator Config
# =====================================

# API Server Port
API_PORT=3001

# =====================================
# Database Configuration (Optional)
# =====================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# Example: postgresql://te_admin:password@localhost:5432/te_platform
#
# If not set, the system will run in MOCK mode with in-memory data
DATABASE_URL=

# JWT Secret Key (CHANGE IN PRODUCTION!)
JWT_SECRET=te_platform_secret_key_change_in_production

# =====================================
# AI Provider Configuration
# =====================================
# Anthropic (Claude) API Key
ANTHROPIC_API_KEY=

# OpenAI (GPT) API Key
OPENAI_API_KEY=

# Default AI Provider for Excel Generation (anthropic or openai)
EXCEL_AI_PROVIDER=anthropic

# Default AI Provider for Data Generation (anthropic or openai)
DATA_AI_PROVIDER=anthropic

# =====================================
# ThinkingEngine Platform Configuration
# =====================================
# Default ThinkingEngine App ID
TE_APP_ID=

# ThinkingEngine Receiver URL
TE_RECEIVER_URL=https://te-receiver-naver.thinkingdata.kr/

# =====================================
# File Retention Policy
# =====================================
# Data file retention period (in days)
DATA_RETENTION_DAYS=7

# Excel file retention period (in days)
EXCEL_RETENTION_DAYS=30

# Auto-delete data files after successful transmission (true/false)
AUTO_DELETE_AFTER_SEND=false
