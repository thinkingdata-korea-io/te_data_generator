# Secret 템플릿 파일
# 실제 사용 시 아래 내용을 복사하여 secret.yaml로 저장하고,
# API 키들을 base64로 인코딩한 값으로 교체하세요.
#
# base64 인코딩 방법:
# echo -n "your-api-key" | base64

apiVersion: v1
kind: Secret
metadata:
  name: te-data-generator-secrets
  labels:
    app: te-data-generator
type: Opaque
data:
  # Anthropic API Key (필수)
  # echo -n "sk-ant-api03-..." | base64
  anthropic-api-key: "BASE64_ENCODED_ANTHROPIC_API_KEY"

  # OpenAI API Key (선택)
  # echo -n "sk-..." | base64
  openai-api-key: "BASE64_ENCODED_OPENAI_API_KEY"
